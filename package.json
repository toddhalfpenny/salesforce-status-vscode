{
  "name": "salesforce-status",
  "displayName": "salesforce-status",
  "description": "Show status, incidents, and maintenance of your Salesforce orgs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salesforce-status.org-status",
        "title": "Org Status"
      },
      {
        "command": "salesforce-status.org-status-webview",
        "title": "Org Status (Advanced)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "salesforce-status.org-status",
          "group": "z_commands"
        }
      ],
      "commandPalette": [
        {
          "command": "salesforce-status.org-status"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@salesforce/core-bundle": "^8.6.2"
  }
}
